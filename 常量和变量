//常量：不可改变的量 
//变量：能被改变的量 

//变量又分为局部变量和全局变量 

//定义变量的方法：
int main()
{
	int age=18;
	double weight=65.3;
	age=age+1;//age++
	weight=weight-5;
	printf("%d\n",age);
	printf("%lf\n",weight);
	return 0;
} 


#include <stdio.h>

//全局变量 - {}外部定义的 
int a=100;
 
int main()
{
	//局部变量 - 内部定义的 
	//当局部变量和全局变量名字冲突的情况下，局部优先 
	int a=10;
	
	printf("%d\n",a);//输出结果 a为10 
	return 0; 
}


